includes:
    - phpstan-baseline.neon

parameters:
    level: 4
    paths:
        - config
        - routes
        - src
        - support
    tmpDir: build/phpstan
    checkOctaneCompatibility: true
    checkModelProperties: true
    ignoreErrors:
        # env() calls in package config files are expected - they get published to the app's config directory
        - identifier: larastan.noEnvCallsOutsideOfConfig
          path: config/*
